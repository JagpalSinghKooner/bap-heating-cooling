---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getBusinessProfile, getCompanyName, getPhoneDisplay, getPhoneLink, getEmail, getEmailLink } from '../lib/getBusinessProfile';

const profile = await getBusinessProfile();
const companyName = getCompanyName(profile);
---

<BaseLayout
  title={`Contact Us - ${companyName}`}
  description="Get in touch with us for all your heating and cooling needs. Available 24/7 for emergency service."
>
  <div class="container mx-auto px-4 py-16">
    <h1 class="mb-8 text-4xl font-bold">Contact Us</h1>

    <p class="mb-12 text-xl text-muted-foreground">
      {profile.contact.primary_cta.long}
    </p>

    <div class="grid gap-8 lg:grid-cols-2">
      <div>
        <h2 class="mb-6 text-2xl font-semibold">Get In Touch</h2>

        <div class="space-y-6">
          <div class="rounded-lg border bg-card p-6">
            <h3 class="mb-2 font-semibold">Phone</h3>
            <a href={getPhoneLink(profile)} class="text-lg font-semibold text-primary hover:underline">
              {getPhoneDisplay(profile)}
            </a>
            <p class="mt-2 text-sm text-muted-foreground">
              {profile.hours.phone_answered_24_7 ? 'Phone answered 24/7' : `Available ${profile.hours.business_hours}`}
            </p>
            {profile.hours.emergency_service && (
              <p class="mt-1 text-sm text-muted-foreground">
                Emergency service available
              </p>
            )}
          </div>

          <div class="rounded-lg border bg-card p-6">
            <h3 class="mb-2 font-semibold">Email</h3>
            <a href={getEmailLink(profile)} class="text-lg font-semibold text-primary hover:underline">
              {getEmail(profile)}
            </a>
            <p class="mt-2 text-sm text-muted-foreground">
              We'll respond as soon as possible
            </p>
          </div>

          <div class="rounded-lg border bg-card p-6">
            <h3 class="mb-2 font-semibold">Business Hours</h3>
            <p class="text-lg font-semibold text-foreground">{profile.hours.business_hours}</p>
            {profile.hours.emergency_service && (
              <p class="mt-2 text-sm text-muted-foreground">
                Emergency service available around the clock
              </p>
            )}
            <p class="mt-2 text-sm text-muted-foreground">
              {profile.hours.response_time_statement}
            </p>
          </div>

          {profile.contact.booking.enabled && (
            <div class="rounded-lg border bg-primary/10 p-6">
              <h3 class="mb-2 font-semibold">Book Online</h3>
              <p class="mb-4 text-sm text-muted-foreground">
                Schedule your service appointment online with {profile.contact.booking.provider}
              </p>
              <a
                href={profile.contact.booking.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-block rounded-md bg-primary px-6 py-3 font-semibold text-primary-foreground transition-colors hover:bg-primary/90"
              >
                Book Appointment
              </a>
            </div>
          )}
        </div>
      </div>

      <div>
        <h2 class="mb-6 text-2xl font-semibold">Our Locations</h2>

        <div class="space-y-6">
          <div class="rounded-lg border bg-card p-6">
            <h3 class="mb-2 font-semibold">{profile.locations.primary.name}</h3>
            <p class="text-sm text-muted-foreground">{profile.locations.primary.address_full}</p>
            <div class="mt-4 space-y-1 text-sm">
              <p>
                <a href={`tel:${profile.locations.primary.phone_e164}`} class="text-primary hover:underline">
                  {getPhoneDisplay(profile)}
                </a>
              </p>
              <p>
                <a href={`mailto:${profile.locations.primary.email}`} class="text-primary hover:underline">
                  {profile.locations.primary.email}
                </a>
              </p>
            </div>
          </div>

          <div class="rounded-lg border bg-card p-6">
            <h3 class="mb-2 font-semibold">{profile.locations.secondary.name}</h3>
            <p class="text-sm text-muted-foreground">{profile.locations.secondary.address_full}</p>
            <div class="mt-4 space-y-1 text-sm">
              <p>
                <a href={`tel:${profile.locations.secondary.phone_e164}`} class="text-primary hover:underline">
                  {getPhoneDisplay(profile)}
                </a>
              </p>
              <p>
                <a href={`mailto:${profile.locations.secondary.email}`} class="text-primary hover:underline">
                  {profile.locations.secondary.email}
                </a>
              </p>
            </div>
          </div>
        </div>

        <div class="mt-6 rounded-lg border bg-muted p-6">
          <h3 class="mb-2 font-semibold">Service Coverage</h3>
          <p class="text-sm text-muted-foreground">
            We provide {profile.coverage.service_model.toLowerCase()} HVAC services across {profile.coverage.regions.length} regions in Ontario.
          </p>
          <a href="/locations/" class="mt-3 inline-block text-sm font-semibold text-primary hover:underline">
            View all service areas â†’
          </a>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
