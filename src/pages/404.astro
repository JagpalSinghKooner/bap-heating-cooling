---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getBusinessProfile } from '../lib/getBusinessProfile';

const profile = await getBusinessProfile();
---

<BaseLayout
  title="Page Not Found - B.A.P Heating and Cooling"
  description="The page you're looking for doesn't exist."
  robots="noindex,follow"
>
  <div class="container mx-auto px-4 py-16">
    <div class="mx-auto max-w-2xl text-center">
      <h1 class="mb-4 text-4xl font-bold">404 - Page Not Found</h1>
      <p class="mb-8 text-xl text-muted-foreground">
        The page you're looking for doesn't exist.
      </p>
      <div class="space-y-4">
        <p class="text-muted-foreground">
          You can return to our homepage or contact us if you need assistance.
        </p>
        <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
          <a
            href="/"
            class="inline-block rounded-md bg-primary px-6 py-3 font-semibold text-primary-foreground transition-colors hover:bg-primary/90"
          >
            Go to Homepage
          </a>
          <a
            href="/contact-us/"
            class="inline-block rounded-md border border-input bg-background px-6 py-3 font-semibold transition-colors hover:bg-accent hover:text-accent-foreground"
          >
            Contact Us
          </a>
        </div>
        <p class="mt-8 text-sm text-muted-foreground">
          Or call us directly: <a
            href={`tel:${profile.contact.phone_e164}`}
            class="font-semibold text-foreground hover:text-primary"
          >
            {profile.contact.phone_display}
          </a>
        </p>
      </div>
    </div>
  </div>
</BaseLayout>
