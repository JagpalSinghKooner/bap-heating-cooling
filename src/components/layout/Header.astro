---
/**
 * Header Layout Component
 *
 * Clean, professional header for an HVAC service company.
 * Prioritizes: Phone number visibility, easy navigation, trust signals.
 *
 * Layout: Logo | Navigation with dropdowns | Phone + Book CTA
 */

import { getBusinessProfile, getCompanyName, getPhoneDisplay, getPhoneLink } from '../../lib/getBusinessProfile';
import Button from '../primitives/Button.astro';
import Icon from '../primitives/Icon.astro';

// Import the logo image
import companyLogo from '../../images/bapheatingandcoolingltd.webp';

interface Props {
  showTopBar?: boolean;
  class?: string;
}

const {
  showTopBar = true,
  class: className = '',
} = Astro.props;

const profile = await getBusinessProfile();
const companyName = getCompanyName(profile);
const phoneDisplay = getPhoneDisplay(profile);
const phoneLink = getPhoneLink(profile);
const bookingUrl = profile.contact.booking.url;
const bookingEnabled = profile.contact.booking.enabled;

// Simplified navigation structure with dropdown content
const navItems = [
  {
    label: 'Services',
    href: '/services/',
    hasDropdown: true,
    dropdownItems: [
      { label: 'Heating', href: '/services/heating/', description: 'Furnaces, boilers & heat pumps' },
      { label: 'Cooling', href: '/services/cooling/', description: 'Air conditioners & ductless systems' },
      { label: 'Indoor Air Quality', href: '/services/indoor-air-quality/', description: 'Purifiers, humidifiers & ventilation' },
      { label: 'Water Heating', href: '/services/water-heating/', description: 'Tank & tankless water heaters' },
      { label: 'Commercial', href: '/services/commercial/', description: 'Business HVAC solutions' },
    ],
  },
  {
    label: 'Maintenance',
    href: '/services/maintenance-plans/',
    hasDropdown: false,
  },
  {
    label: 'Areas',
    href: '/locations/',
    hasDropdown: false,
  },
  {
    label: 'About',
    href: '/about-us/',
    hasDropdown: true,
    dropdownItems: [
      { label: 'About Us', href: '/about-us/', description: 'Our story & team' },
      { label: 'Reviews', href: '/reviews/', description: 'Customer testimonials' },
      { label: 'Blog', href: '/blog/', description: 'Tips & industry news' },
    ],
  },
  {
    label: 'Contact',
    href: '/contact-us/',
    hasDropdown: false,
  },
];
---

<header class:list={['header', className]} data-header>
  {/* Top Bar - Contact Info Strip */}
  {showTopBar && (
    <div class="top-bar">
      <div class="top-bar__inner">
        <div class="top-bar__left">
          <a href={`mailto:${profile.contact.email}`} class="top-bar__link">
            <Icon name="mail" size="sm" />
            <span class="top-bar__link-text">{profile.contact.email}</span>
          </a>
        </div>

        <a href={phoneLink} class="top-bar__phone">
          <Icon name="phone" size="sm" />
          <span>24/7 Emergency:</span>
          <strong>{phoneDisplay}</strong>
        </a>

        <div class="top-bar__right">
          <div class="top-bar__social">
            <a href={profile.social.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            </a>
            <a href={profile.social.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
              <svg viewBox="0 0 24 24" fill="currentColor"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/></svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  )}

  {/* Main Header */}
  <div class="header__main">
    <div class="header__inner">
      {/* Logo */}
      <a href="/" class="header__logo" aria-label={`${companyName} - Home`}>
        <img
          src={companyLogo.src}
          alt={companyName}
          width="200"
          height="60"
          loading="eager"
        />
      </a>

      {/* Desktop Navigation */}
      <nav class="header__nav" aria-label="Main navigation">
        <ul class="nav-list">
          {navItems.map((item) => (
            <li class="nav-item" data-has-dropdown={item.hasDropdown || undefined}>
              <a href={item.href} class="nav-link">
                {item.label}
                {item.hasDropdown && (
                  <svg class="nav-chevron" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
                  </svg>
                )}
              </a>

              {/* Dropdown Menu */}
              {item.hasDropdown && item.dropdownItems && (
                <div class="dropdown">
                  <div class="dropdown__inner">
                    {item.dropdownItems.map((dropItem) => (
                      <a href={dropItem.href} class="dropdown__item">
                        <span class="dropdown__item-label">{dropItem.label}</span>
                        <span class="dropdown__item-desc">{dropItem.description}</span>
                      </a>
                    ))}
                  </div>
                </div>
              )}
            </li>
          ))}
        </ul>
      </nav>

      {/* CTA Section */}
      <div class="header__cta">
        <a href={phoneLink} class="header__phone">
          <Icon name="phone" size="md" />
          <span class="header__phone-number">{phoneDisplay}</span>
        </a>

        {bookingEnabled && (
          <Button
            variant="primary"
            size="sm"
            href={bookingUrl}
          >
            Book Online
          </Button>
        )}

        {/* Mobile Menu Toggle */}
        <button
          type="button"
          class="header__menu-btn"
          aria-label="Open menu"
          aria-expanded="false"
          data-menu-toggle
        >
          <span class="hamburger">
            <span></span>
            <span></span>
            <span></span>
          </span>
        </button>
      </div>
    </div>
  </div>

  {/* Mobile Menu */}
  <div class="mobile-menu" id="mobile-menu" data-mobile-menu>
    <nav class="mobile-menu__nav">
      {navItems.map((item) => (
        <div class="mobile-menu__group">
          <a href={item.href} class="mobile-menu__link">
            {item.label}
          </a>
          {item.hasDropdown && item.dropdownItems && (
            <div class="mobile-menu__sub">
              {item.dropdownItems.map((subItem) => (
                <a href={subItem.href} class="mobile-menu__sublink">
                  {subItem.label}
                </a>
              ))}
            </div>
          )}
        </div>
      ))}
    </nav>

    <div class="mobile-menu__cta">
      <a href={phoneLink} class="mobile-menu__phone">
        <Icon name="phone" size="lg" />
        <div>
          <span class="mobile-menu__phone-label">Call Us 24/7</span>
          <span class="mobile-menu__phone-number">{phoneDisplay}</span>
        </div>
      </a>

      {bookingEnabled && (
        <Button variant="primary" size="lg" href={bookingUrl} class="mobile-menu__book">
          Book Online
        </Button>
      )}
    </div>
  </div>
</header>

<style>
  /* ================================================================
     HEADER BASE
     ================================================================ */
  .header {
    position: sticky;
    top: 0;
    z-index: 100;
    background: var(--color-surface-primary);
  }

  .header[data-scrolled="true"] {
    box-shadow: 0 2px 20px rgba(0, 0, 0, 0.08);
  }

  /* ================================================================
     TOP BAR
     ================================================================ */
  .top-bar {
    background: var(--color-primary-900);
    color: white;
    font-size: 0.875rem;
    display: none;
  }

  @media (min-width: 768px) {
    .top-bar {
      display: block;
    }
  }

  .top-bar__inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0.5rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .top-bar__left,
  .top-bar__right {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .top-bar__link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    min-height: 44px;
    padding: 0 0.5rem;
    color: var(--color-primary-200);
    text-decoration: none;
    transition: color 0.2s;
  }

  .top-bar__link:hover {
    color: white;
  }

  .top-bar__link-text {
    display: none;
  }

  @media (min-width: 1024px) {
    .top-bar__link-text {
      display: inline;
    }
  }

  .top-bar__phone {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    min-height: 44px;
    padding: 0 0.5rem;
    color: white;
    text-decoration: none;
    font-weight: 500;
  }

  .top-bar__phone:hover {
    color: var(--color-accent-300);
  }

  .top-bar__phone strong {
    font-weight: 700;
    letter-spacing: 0.02em;
  }

  .top-bar__social {
    display: flex;
    gap: 0.75rem;
  }

  .top-bar__social a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    color: var(--color-primary-300);
    transition: color 0.2s;
  }

  .top-bar__social a:hover {
    color: white;
  }

  .top-bar__social svg {
    width: 16px;
    height: 16px;
  }

  /* ================================================================
     MAIN HEADER
     ================================================================ */
  .header__main {
    border-bottom: 1px solid var(--color-border-secondary);
  }

  .header__inner {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0.75rem 1rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 2rem;
  }

  @media (min-width: 1024px) {
    .header__inner {
      padding: 1rem 1.5rem;
    }
  }

  /* ================================================================
     LOGO
     ================================================================ */
  .header__logo {
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }

  .header__logo img {
    height: 50px;
    width: auto;
    object-fit: contain;
  }

  @media (min-width: 768px) {
    .header__logo img {
      height: 60px;
    }
  }

  /* ================================================================
     DESKTOP NAVIGATION
     ================================================================ */
  .header__nav {
    display: none;
  }

  @media (min-width: 1024px) {
    .header__nav {
      display: block;
    }
  }

  .nav-list {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-item {
    position: relative;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.625rem 1rem;
    font-family: var(--font-family-heading);
    font-size: 0.9375rem;
    font-weight: 600;
    color: var(--color-text-primary);
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.2s;
  }

  .nav-link:hover {
    color: var(--color-primary-600);
    background: var(--color-primary-50);
  }

  .nav-chevron {
    width: 16px;
    height: 16px;
    transition: transform 0.2s;
  }

  .nav-item:hover .nav-chevron {
    transform: rotate(180deg);
  }

  /* ================================================================
     DROPDOWN MENUS
     ================================================================ */
  .dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    min-width: 260px;
    background: white;
    border-radius: 0.75rem;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.12), 0 2px 6px rgba(0, 0, 0, 0.04);
    border: 1px solid var(--color-border-secondary);
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
    z-index: 50;
  }

  .dropdown::before {
    content: '';
    position: absolute;
    top: -8px;
    left: 0;
    right: 0;
    height: 8px;
  }

  .nav-item:hover .dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .dropdown__inner {
    padding: 0.5rem;
  }

  .dropdown__item {
    display: block;
    padding: 0.75rem 1rem;
    border-radius: 0.5rem;
    text-decoration: none;
    transition: background 0.15s;
  }

  .dropdown__item:hover {
    background: var(--color-primary-50);
  }

  .dropdown__item-label {
    display: block;
    font-weight: 600;
    color: var(--color-text-primary);
    font-size: 0.9375rem;
    margin-bottom: 0.125rem;
  }

  .dropdown__item-desc {
    display: block;
    font-size: 0.8125rem;
    color: var(--color-text-secondary);
  }

  /* ================================================================
     CTA SECTION
     ================================================================ */
  .header__cta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-shrink: 0;
  }

  @media (min-width: 768px) {
    .header__cta {
      gap: 1rem;
    }
  }

  .header__phone {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-primary-700);
    text-decoration: none;
    font-weight: 700;
    transition: color 0.2s;
  }

  .header__phone:hover {
    color: var(--color-primary-800);
  }

  .header__phone-number {
    display: inline;
    font-family: var(--font-family-heading);
    font-size: clamp(0.75rem, 2.5vw, 1rem);
    letter-spacing: 0.01em;
  }

  .header__cta :global(.btn) {
    display: none;
  }

  @media (min-width: 480px) {
    .header__cta :global(.btn) {
      display: inline-flex;
    }
  }

  /* ================================================================
     MOBILE MENU BUTTON
     ================================================================ */
  .header__menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    padding: 0;
    background: none;
    border: none;
    border-radius: 0.5rem;
    cursor: pointer;
    transition: background 0.2s;
  }

  .header__menu-btn:hover {
    background: var(--color-surface-secondary);
  }

  @media (min-width: 1024px) {
    .header__menu-btn {
      display: none;
    }
  }

  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5px;
    width: 22px;
    height: 16px;
  }

  .hamburger span {
    display: block;
    width: 100%;
    height: 2px;
    background: var(--color-text-primary);
    border-radius: 2px;
    transition: all 0.3s;
  }

  .header__menu-btn[aria-expanded="true"] .hamburger span:nth-child(1) {
    transform: translateY(7px) rotate(45deg);
  }

  .header__menu-btn[aria-expanded="true"] .hamburger span:nth-child(2) {
    opacity: 0;
  }

  .header__menu-btn[aria-expanded="true"] .hamburger span:nth-child(3) {
    transform: translateY(-7px) rotate(-45deg);
  }

  /* ================================================================
     MOBILE MENU
     ================================================================ */
  .mobile-menu {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: white;
    z-index: 90;
    padding: 5rem 1.5rem 2rem;
    overflow-y: auto;
    flex-direction: column;
  }

  .mobile-menu[data-open="true"] {
    display: flex;
  }

  @media (min-width: 1024px) {
    .mobile-menu {
      display: none !important;
    }
  }

  .mobile-menu__nav {
    flex: 1;
  }

  .mobile-menu__group {
    border-bottom: 1px solid var(--color-border-secondary);
  }

  .mobile-menu__link {
    display: block;
    padding: 1rem 0;
    font-family: var(--font-family-heading);
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .mobile-menu__sub {
    padding-bottom: 0.75rem;
  }

  .mobile-menu__sublink {
    display: block;
    padding: 0.5rem 0 0.5rem 1rem;
    font-size: 1rem;
    color: var(--color-text-secondary);
    text-decoration: none;
    border-left: 2px solid var(--color-border-secondary);
  }

  .mobile-menu__sublink:hover {
    color: var(--color-primary-600);
    border-left-color: var(--color-primary-600);
  }

  .mobile-menu__cta {
    padding-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .mobile-menu__phone {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: var(--color-primary-50);
    border-radius: 0.75rem;
    text-decoration: none;
    color: var(--color-primary-700);
  }

  .mobile-menu__phone-label {
    display: block;
    font-size: 0.875rem;
    color: var(--color-text-secondary);
  }

  .mobile-menu__phone-number {
    display: block;
    font-family: var(--font-family-heading);
    font-size: 1.25rem;
    font-weight: 700;
  }

  .mobile-menu__book {
    width: 100%;
    justify-content: center;
  }

  /* ================================================================
     REDUCED MOTION
     ================================================================ */
  @media (prefers-reduced-motion: reduce) {
    .header,
    .nav-link,
    .dropdown,
    .hamburger span {
      transition: none;
    }
  }
</style>

<script>
  function initHeader() {
    const header = document.querySelector('[data-header]') as HTMLElement | null;
    const menuToggle = document.querySelector('[data-menu-toggle]') as HTMLButtonElement | null;
    const mobileMenu = document.querySelector('[data-mobile-menu]') as HTMLElement | null;

    if (!header) return;

    // Scroll behavior
    let ticking = false;
    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(() => {
          header?.setAttribute('data-scrolled', String(window.scrollY > 10));
          ticking = false;
        });
        ticking = true;
      }
    }
    window.addEventListener('scroll', onScroll, { passive: true });
    onScroll();

    // Mobile menu toggle
    if (menuToggle && mobileMenu) {
      menuToggle.addEventListener('click', () => {
        const isOpen = menuToggle.getAttribute('aria-expanded') === 'true';
        menuToggle.setAttribute('aria-expanded', String(!isOpen));
        mobileMenu.setAttribute('data-open', String(!isOpen));
        document.body.style.overflow = !isOpen ? 'hidden' : '';
      });

      // Close menu on link click
      mobileMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          menuToggle.setAttribute('aria-expanded', 'false');
          mobileMenu.setAttribute('data-open', 'false');
          document.body.style.overflow = '';
        });
      });
    }
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initHeader);
  } else {
    initHeader();
  }
  document.addEventListener('astro:page-load', initHeader);
</script>
