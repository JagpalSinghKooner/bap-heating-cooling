---
/**
 * Business Overview Section
 * Establishes identity and trust immediately after hero
 * 2-column layout: text-left, image-right
 * NO primary CTA - optional subtle text link to about page
 */
import { getBusinessProfile } from '../../lib/getBusinessProfile';
import Card from '../primitives/Card.astro';
import IconBadge from '../primitives/IconBadge.astro';
import Section from '../primitives/Section.astro';

const profile = await getBusinessProfile();
const yearsInBusiness = new Date().getFullYear() - profile.business.established_year;
---

<Section variant="muted">
  <Card class="border shadow-lg p-8">
        <div class="grid gap-8 lg:grid-cols-2 lg:gap-12">
          {/* Left Column: Business Overview Text */}
          <div class="flex flex-col justify-center">
            <p class="eyebrow mb-3">Who We Are</p>

            <h2 class="mb-6 text-3xl font-bold text-foreground lg:text-4xl">
              [PLACEHOLDER: Company Introduction Headline]
            </h2>

            <div class="space-y-4 text-base text-muted-foreground lg:text-lg">
              <p>
                [PLACEHOLDER: Brief company history and mission - 2-3 sentences about B.A.P's background, years in business, family ownership, or founding story]
              </p>

              <p>
                [PLACEHOLDER: What makes B.A.P different - commitment to quality, community focus, or core values]
              </p>
            </div>

            {/* Trust Points - Visual list */}
            <div class="mt-6 grid gap-3">
              <div class="flex items-center gap-3">
                <IconBadge size="sm" variant="primary">
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </IconBadge>
                <p class="text-sm font-medium text-foreground">
                  [PLACEHOLDER: Trust point 1 - e.g., "Licensed & Insured Professionals"]
                </p>
              </div>

              <div class="flex items-center gap-3">
                <IconBadge size="sm" variant="primary">
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </IconBadge>
                <p class="text-sm font-medium text-foreground">
                  [PLACEHOLDER: Trust point 2 - e.g., "{yearsInBusiness}+ Years Serving Ontario"]
                </p>
              </div>

              <div class="flex items-center gap-3">
                <IconBadge size="sm" variant="primary">
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                  </svg>
                </IconBadge>
                <p class="text-sm font-medium text-foreground">
                  [PLACEHOLDER: Trust point 3 - e.g., "Family-Owned & Operated"]
                </p>
              </div>
            </div>

            {/* Optional: Subtle text link to about page */}
            <div class="mt-8">
              <a
                href="/about-us/"
                class="inline-flex items-center gap-2 text-sm font-semibold text-primary transition-colors hover:text-primary/80"
              >
                <span>Learn more about our story</span>
                <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </a>
            </div>
          </div>

          {/* Right Column: Placeholder Image */}
          <div class="flex items-center justify-center">
            <div class="relative overflow-hidden rounded-lg shadow-md">
              <img
                src="https://placehold.co/600x400/e5e7eb/64748b.png?text=Business+Photo"
                alt="[PLACEHOLDER: Alt text for business photo - e.g., B.A.P Heating and Cooling team or technician at work]"
                class="h-full w-full object-cover"
              />

              {/* Optional: Badge overlay */}
              <div class="absolute bottom-4 left-4 rounded-lg bg-white px-4 py-3 shadow-lg">
                <p class="text-xs font-semibold text-muted-foreground">Established</p>
                <p class="text-lg font-bold text-foreground">
                  {profile.business.established_year}
                </p>
              </div>
            </div>
          </div>
    </div>
  </Card>
</Section>
