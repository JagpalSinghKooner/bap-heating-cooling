---
/**
 * Brand Logos Section - Manufacturer Trust Indicators
 * Shows logos of major HVAC brands we install and service
 *
 * Position: After WhyChooseBAPSection (trust reinforcement)
 *
 * Brands:
 * - Carrier (authorized dealer)
 * - Lennox
 * - Trane
 * - Goodman
 * - Daikin
 *
 * Logo files: /public/brands/*-hvac-logo.svg
 */

import Section from '../primitives/Section.astro';

const brands = [
  {
    name: 'Carrier',
    logo: '/brands/carrier-hvac-logo.svg',
    tagline: 'Authorized Dealer',
    isPartner: true,
  },
  {
    name: 'Lennox',
    logo: '/brands/lennox-hvac-logo.svg',
    tagline: '',
    isPartner: false,
  },
  {
    name: 'Trane',
    logo: '/brands/trane-hvac-logo.svg',
    tagline: '',
    isPartner: false,
  },
  {
    name: 'Goodman',
    logo: '/brands/goodman-hvac-logo.svg',
    tagline: '',
    isPartner: false,
  },
  {
    name: 'Daikin',
    logo: '/brands/daikin-hvac-logo.svg',
    tagline: '',
    isPartner: false,
  },
];
---

<Section variant="muted">
  <!-- Section Header -->
  <div class="mb-8 text-center sm:mb-10">
    <p class="eyebrow mb-3">Trusted Brands</p>
    <h2 class="section-title mx-auto mb-4 max-w-3xl">
      Brands We Install & Service
    </h2>
    <p class="mx-auto max-w-2xl text-base leading-relaxed text-muted-foreground">
      Factory-trained technicians certified to work on all major HVAC brands.
    </p>
  </div>

  <!-- Brand Logos Grid - 5 brands -->
  <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-5 md:gap-6">
    {brands.map((brand) => (
      <div
        class={`group relative flex flex-col items-center justify-center rounded-xl bg-white p-4 shadow-sm transition-all duration-300 hover:shadow-md sm:p-6 ${brand.isPartner ? 'ring-2 ring-primary/20' : ''}`}
      >
        {/* Partner Badge */}
        {brand.isPartner && (
          <div class="absolute -top-2 left-1/2 -translate-x-1/2 whitespace-nowrap rounded-full bg-primary px-2 py-0.5 text-[10px] font-bold uppercase tracking-wide text-white">
            Authorized
          </div>
        )}

        {/* Brand Logo */}
        <div class="mb-2 flex h-12 w-full items-center justify-center sm:h-14">
          <img
            src={brand.logo}
            alt={`${brand.name} HVAC logo`}
            class="h-full w-auto max-w-full object-contain transition-all duration-300"
            loading="lazy"
          />
        </div>

        {/* Tagline */}
        {brand.tagline && (
          <span class="text-[10px] font-medium uppercase tracking-wide text-muted-foreground">
            {brand.tagline}
          </span>
        )}
      </div>
    ))}
  </div>

  <!-- Bottom Note -->
  <p class="mt-6 text-center text-sm text-muted-foreground sm:mt-8">
    Don't see your brand? We service <strong class="text-foreground">all major manufacturers</strong>.
    <a href="tel:519-835-4858" class="font-semibold text-primary hover:underline">Call us</a> for a consultation.
  </p>
</Section>
