---
import { getBusinessProfile } from '../../lib/getBusinessProfile';
import Button from '../primitives/Button.astro';
import Card from '../primitives/Card.astro';
import Badge from '../primitives/Badge.astro';
import Section from '../primitives/Section.astro';

const profile = await getBusinessProfile();

// Only render if financing is available
if (!profile.pricing_and_offers?.financing?.available) {
  return null;
}
---

<Section variant="brand">
  <div class="mx-auto max-w-4xl">
      <Card class="shadow-lg border-2 border-primary/20 bg-primary/5 p-8">
        <div class="grid gap-8 lg:grid-cols-2 lg:gap-12">
          {/* Left Column: Content */}
          <div class="flex flex-col justify-center">
            <Badge variant="primary" size="md" class="mb-4">
              <span class="text-xl" aria-hidden="true">ðŸ’³</span>
              <span>Financing Available</span>
            </Badge>

            <h2 class="mb-4 text-3xl font-bold text-foreground lg:text-4xl">
              Flexible Payment Options
            </h2>

            <p class="mb-6 text-lg text-muted-foreground">
              {profile.pricing_and_offers.financing.statement}
            </p>

            <Button
              variant="primary"
              size="md"
              href="/financing/"
            >
              <span>Explore Financing Options</span>
              <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
              </svg>
            </Button>
          </div>

          {/* Right Column: Visual/Benefits */}
          <div class="flex items-center justify-center">
            <div class="grid gap-4">
              <div class="flex items-start gap-3 rounded-lg bg-muted/30 p-4">
                <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-primary/10">
                  <span class="text-xl" aria-hidden="true">ðŸ’°</span>
                </div>
                <div>
                  <p class="font-semibold text-foreground">Most monthly payments are less than your phone bill</p>
                  <p class="text-sm text-muted-foreground">Affordable plans that fit your budget</p>
                </div>
              </div>

              <div class="flex items-start gap-3 rounded-lg bg-muted/30 p-4">
                <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-primary/10">
                  <span class="text-xl" aria-hidden="true">âœ“</span>
                </div>
                <div>
                  <p class="font-semibold text-foreground">0% options available for qualified homeowners</p>
                  <p class="text-sm text-muted-foreground">Interest-free financing on approved credit</p>
                </div>
              </div>

              <div class="flex items-start gap-3 rounded-lg bg-muted/30 p-4">
                <div class="flex h-10 w-10 flex-shrink-0 items-center justify-center rounded-full bg-primary/10">
                  <span class="text-xl" aria-hidden="true">âš¡</span>
                </div>
                <div>
                  <p class="font-semibold text-foreground">No payment until installation is complete</p>
                  <p class="text-sm text-muted-foreground">You pay only after the work is done right</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </Card>
  </div>
</Section>
