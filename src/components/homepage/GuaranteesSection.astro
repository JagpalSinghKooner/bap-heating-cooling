---
/**
 * Guarantees Section - Premium Risk Removal with Emotion
 * Addresses the fear: "What if something goes wrong?"
 */

import Section from '../primitives/Section.astro';

const guarantees = [
  {
    title: '10-Year Worry-Free Warranty',
    painPoint: 'Worried about repair costs down the road?',
    description: 'Every installation includes comprehensive parts & labour coverage. Sleep easy knowing your investment is protected.',
    icon: '<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" /></svg>',
    gradient: 'from-blue-500/10 to-cyan-500/10',
  },
  {
    title: 'Done Right or We Fix It Free',
    painPoint: 'Scared of paying twice for the same problem?',
    description: 'Our workmanship guarantee means if something isn\'t right, we return to fix it at no extra cost. Zero excuses.',
    icon: '<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>',
    gradient: 'from-green-500/10 to-emerald-500/10',
  },
  {
    title: 'Transparent, Upfront Pricing',
    painPoint: 'Afraid of hidden fees and surprise charges?',
    description: 'You see the full price before we start. No surprises, no "additional costs discovered" mid-job. Ever.',
    icon: '<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>',
    gradient: 'from-yellow-500/10 to-orange-500/10',
  },
  {
    title: '100% Satisfaction or We Return',
    painPoint: 'What if you\'re not happy with the work?',
    description: 'We\'re not finished until you\'re completely satisfied. If we can\'t make it right, we don\'t charge you.',
    icon: '<svg fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.764a2 2 0 011.789 2.894l-3.5 7A2 2 0 0115.263 21h-4.017c-.163 0-.326-.02-.485-.06L7 20m7-10V5a2 2 0 00-2-2h-.095c-.5 0-.905.405-.905.905 0 .714-.211 1.412-.608 2.006L7 11v9m7-10h-2M7 20H5a2 2 0 01-2-2v-6a2 2 0 012-2h2.5" /></svg>',
    gradient: 'from-purple-500/10 to-pink-500/10',
  },
];

const certifications = [
  {
    name: 'TSSA Certified',
    description: 'Technical Standards & Safety Authority approved',
    icon: '<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>',
  },
  {
    name: 'Carrier Authorized',
    description: 'Factory-trained on premium equipment',
    icon: '<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>',
  },
  {
    name: 'Fully Insured',
    description: 'Your property is protected',
    icon: '<svg fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" /></svg>',
  },
];
---

<Section variant="muted">
  <!-- Section Header -->
  <div class="mb-10 text-center">
    <h2 class="section-title mx-auto mb-4 max-w-3xl">Our Guarantees</h2>
  </div>

  <!-- Simple Guarantee List -->
  <div class="mx-auto max-w-3xl space-y-6">
    {guarantees.map((guarantee) => (
      <div class="flex gap-4">
        <div class="flex-shrink-0 text-primary">
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-foreground">{guarantee.title}</h3>
          <p class="text-sm text-muted-foreground">{guarantee.description}</p>
        </div>
      </div>
    ))}
  </div>

  <!-- Certifications - Simple inline -->
  <div class="mt-10 flex flex-wrap items-center justify-center gap-6 text-sm text-muted-foreground">
    {certifications.map((cert) => (
      <span class="flex items-center gap-2">
        <svg class="h-4 w-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        {cert.name}
      </span>
    ))}
  </div>
</Section>
