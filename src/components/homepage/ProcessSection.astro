---
/**
 * Process Section - Clean 4-Step Grid
 * Simple, scannable process steps that match the site design
 */

import Section from '../primitives/Section.astro';
import SectionHeader from '../primitives/SectionHeader.astro';

const processSteps = [
  {
    number: '1',
    title: 'Get In Touch',
    description: 'Call or book online. A real person answers during business hours and schedules at your convenience.',
    highlight: 'Under 30 second response',
  },
  {
    number: '2',
    title: 'Technician Arrives',
    description: 'Licensed professional arrives within your scheduled window. Text updates keep you informed.',
    highlight: '97% on-time arrival',
  },
  {
    number: '3',
    title: 'Clear Pricing',
    description: 'See the full price before we start. No hidden fees, no pressure. You approve every step.',
    highlight: '100% upfront pricing',
  },
  {
    number: '4',
    title: 'Quality Work',
    description: 'Professional installation or repair, often completed same visit. Clean workspace, respectful service.',
    highlight: '10-year warranty',
  },
];
---

<Section variant="default">
  <!-- Section Header -->
  <SectionHeader
    eyebrow="How It Works"
    headline="What to expect when you hire us"
    description="No surprises, no runaround. Just professional service from start to finish."
    class="sm:mb-12"
  />

  <!-- 4-Step Grid -->
  <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
    {processSteps.map((step) => (
      <div class="group relative rounded-2xl bg-muted/50 p-6 transition-all duration-300 hover:shadow-lg">
        <!-- Step Number -->
        <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-full bg-primary text-xl font-bold text-white">
          {step.number}
        </div>

        <!-- Title -->
        <h3 class="mb-2 text-lg font-bold text-foreground">
          {step.title}
        </h3>

        <!-- Description -->
        <p class="mb-4 text-sm leading-relaxed text-muted-foreground">
          {step.description}
        </p>

        <!-- Highlight Badge -->
        <div class="inline-flex items-center gap-1.5 rounded-full bg-green-500/10 px-3 py-1.5 text-xs font-semibold text-green-700">
          <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          {step.highlight}
        </div>
      </div>
    ))}
  </div>
</Section>
