---
/**
 * Exit-Intent Modal
 * Captures leaving visitors with a special offer
 * Features: exit detection, localStorage persistence, mobile back-button detection
 * Only shows once per session with option to permanently dismiss
 */

import { getBusinessProfile } from '../../lib/getBusinessProfile';

const profile = await getBusinessProfile();
---

<!-- Exit Intent Modal Overlay -->
<div
  id="exit-intent-modal"
  class="fixed inset-0 z-[60] hidden items-center justify-center bg-black/60 backdrop-blur-sm transition-all duration-300"
  role="dialog"
  aria-modal="true"
  aria-labelledby="exit-modal-title"
>
  <!-- Modal Container -->
  <div
    class="relative mx-4 max-w-md transform rounded-2xl bg-white p-8 shadow-2xl transition-all duration-300 sm:mx-0 sm:p-10"
    id="exit-modal-content"
  >
    <!-- Close Button -->
    <button
      id="close-exit-modal"
      type="button"
      class="absolute right-4 top-4 inline-flex h-8 w-8 items-center justify-center rounded-full text-gray-400 transition-colors hover:bg-gray-100 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
      aria-label="Close modal"
    >
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>

    <!-- Modal Content -->
    <div class="text-center">
      <!-- Icon -->
      <div class="mb-6 flex justify-center">
        <div class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-brand-orange/10">
          <svg class="h-8 w-8 text-brand-orange" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
      </div>

      <!-- Headline -->
      <h2 id="exit-modal-title" class="mb-3 text-3xl font-extrabold text-gray-900 sm:text-4xl">
        Wait! Don't Go Yet
      </h2>

      <!-- Subheadline -->
      <p class="mb-6 text-lg text-gray-600">
        Get <span class="font-bold text-brand-orange">$50 off</span> your first HVAC service
      </p>

      <!-- Value Props -->
      <div class="mb-8 space-y-3 text-left">
        <div class="flex items-start gap-3">
          <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-sm text-gray-700">Expert technicians with 30+ years experience</span>
        </div>
        <div class="flex items-start gap-3">
          <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-sm text-gray-700">24/7 emergency service available</span>
        </div>
        <div class="flex items-start gap-3">
          <svg class="mt-0.5 h-5 w-5 flex-shrink-0 text-green-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span class="text-sm text-gray-700">Licensed, insured, and TSSA certified</span>
        </div>
      </div>

      <!-- CTAs -->
      <div class="space-y-3">
        <!-- Primary CTA: Call Now -->
        <a
          href={`tel:${profile.contact.phone_e164}`}
          class="inline-flex w-full items-center justify-center gap-2 rounded-xl bg-brand-orange px-6 py-4 text-base font-bold text-white shadow-lg transition-all hover:scale-105 hover:bg-brand-orange-dark hover:shadow-xl focus:outline-none focus:ring-2 focus:ring-brand-orange focus:ring-offset-2"
          data-cta-context="exit-intent-call"
        >
          <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          <span>Call {profile.contact.phone_display}</span>
        </a>

        <!-- Secondary CTA: Book Free Estimate -->
        {profile.contact.booking.enabled && (
          <a
            href={profile.contact.booking.url}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex w-full items-center justify-center gap-2 rounded-xl border-2 border-primary bg-white px-6 py-4 text-base font-semibold text-primary transition-all hover:bg-primary hover:text-white focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
            data-cta-context="exit-intent-book"
          >
            <span>Book Free Estimate</span>
            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        )}
      </div>

      <!-- Don't Show Again Link -->
      <div class="mt-6">
        <button
          id="dont-show-again"
          type="button"
          class="text-sm text-gray-500 underline transition-colors hover:text-gray-700"
        >
          Don't show this again
        </button>
      </div>

      <!-- Fine Print -->
      <p class="mt-4 text-xs text-gray-400">
        *New customers only. Cannot be combined with other offers.
      </p>
    </div>
  </div>
</div>

<style>
  /* Modal animations */
  #exit-intent-modal.show {
    display: flex !important;
    animation: fadeIn 300ms ease-out;
  }

  #exit-intent-modal.show #exit-modal-content {
    animation: slideUp 300ms ease-out;
  }

  #exit-intent-modal.hide {
    animation: fadeOut 300ms ease-out;
  }

  #exit-intent-modal.hide #exit-modal-content {
    animation: slideDown 300ms ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes fadeOut {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
    }
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideDown {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(20px);
      opacity: 0;
    }
  }
</style>

<script>
  // Exit Intent Modal Logic
  const STORAGE_KEY_SESSION = 'bap_exit_intent_shown';
  const STORAGE_KEY_PERMANENT = 'bap_exit_intent_dismissed';
  const DELAY_BEFORE_SHOW = 5000; // Don't show immediately on page load (5 seconds)
  const MOUSE_EXIT_THRESHOLD = 10; // Pixels from top before triggering

  interface ExitIntentState {
    hasShown: boolean;
    canShow: boolean;
    isShowing: boolean;
    minTimeElapsed: boolean;
  }

  function initExitIntent() {
    const modal = document.getElementById('exit-intent-modal');
    const closeBtn = document.getElementById('close-exit-modal');
    const dontShowBtn = document.getElementById('dont-show-again');

    if (!modal || !closeBtn || !dontShowBtn) return;

    // State management
    const state: ExitIntentState = {
      hasShown: false,
      canShow: false,
      isShowing: false,
      minTimeElapsed: false,
    };

    // Check if permanently dismissed
    if (localStorage.getItem(STORAGE_KEY_PERMANENT)) {
      return;
    }

    // Check if already shown in this session
    if (sessionStorage.getItem(STORAGE_KEY_SESSION)) {
      return;
    }

    // Allow showing after delay
    setTimeout(() => {
      state.minTimeElapsed = true;
      state.canShow = true;
    }, DELAY_BEFORE_SHOW);

    // Show modal function
    function showModal() {
      if (state.isShowing || state.hasShown || !state.canShow) return;

      state.isShowing = true;
      state.hasShown = true;
      modal!.classList.add('show');
      modal!.classList.remove('hidden');
      document.body.style.overflow = 'hidden'; // Prevent background scroll

      // Mark as shown in session
      sessionStorage.setItem(STORAGE_KEY_SESSION, 'true');

      // Track event
      if (typeof window.gtag !== 'undefined') {
        window.gtag('event', 'exit_intent_shown', {
          event_category: 'engagement',
          event_label: 'exit_intent_popup',
        });
      }
    }

    // Hide modal function
    function hideModal(permanent = false) {
      modal!.classList.add('hide');
      setTimeout(() => {
        modal!.classList.remove('show', 'hide');
        modal!.classList.add('hidden');
        document.body.style.overflow = ''; // Restore scroll
        state.isShowing = false;
      }, 300);

      if (permanent) {
        localStorage.setItem(STORAGE_KEY_PERMANENT, 'true');

        // Track permanent dismissal
        if (typeof window.gtag !== 'undefined') {
          window.gtag('event', 'exit_intent_dismissed_permanent', {
            event_category: 'engagement',
            event_label: 'dont_show_again',
          });
        }
      }
    }

    // Desktop: Mouse leave detection
    function handleMouseLeave(e: MouseEvent) {
      // Only trigger if mouse is moving upward toward top of viewport
      if (e.clientY <= MOUSE_EXIT_THRESHOLD && e.movementY < 0) {
        showModal();
      }
    }

    // Mobile: History back button detection (popstate)
    function handlePopState() {
      showModal();
      // Push state back so user doesn't leave page
      window.history.pushState(null, '', window.location.href);
    }

    // Add history state for mobile back button detection
    if ('pushState' in window.history) {
      window.history.pushState(null, '', window.location.href);
      window.addEventListener('popstate', handlePopState);
    }

    // Listen for mouse leave (desktop)
    document.addEventListener('mouseleave', handleMouseLeave);

    // Close button handler
    closeBtn.addEventListener('click', () => {
      hideModal(false);

      // Track close
      if (typeof window.gtag !== 'undefined') {
        window.gtag('event', 'exit_intent_closed', {
          event_category: 'engagement',
          event_label: 'close_button',
        });
      }
    });

    // "Don't show again" handler
    dontShowBtn.addEventListener('click', () => {
      hideModal(true);
    });

    // Close on overlay click
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        hideModal(false);

        // Track overlay close
        if (typeof window.gtag !== 'undefined') {
          window.gtag('event', 'exit_intent_closed', {
            event_category: 'engagement',
            event_label: 'overlay_click',
          });
        }
      }
    });

    // Close on Escape key
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && state.isShowing) {
        hideModal(false);

        // Track escape close
        if (typeof window.gtag !== 'undefined') {
          window.gtag('event', 'exit_intent_closed', {
            event_category: 'engagement',
            event_label: 'escape_key',
          });
        }
      }
    });

    // Track CTA clicks within modal
    const ctaButtons = modal.querySelectorAll('[data-cta-context^="exit-intent"]');
    ctaButtons.forEach((btn) => {
      btn.addEventListener('click', () => {
        const context = btn.getAttribute('data-cta-context');
        if (typeof window.gtag !== 'undefined') {
          window.gtag('event', 'exit_intent_conversion', {
            event_category: 'conversion',
            event_label: context,
          });
        }
      });
    });

    // Cleanup on page unload
    window.addEventListener('beforeunload', () => {
      document.removeEventListener('mouseleave', handleMouseLeave);
      window.removeEventListener('popstate', handlePopState);
    });
  }

  // Initialize on DOM ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initExitIntent);
  } else {
    initExitIntent();
  }
</script>
