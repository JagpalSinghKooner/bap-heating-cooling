---
import AccordionItem from './AccordionItem.astro';
import Section from '../primitives/Section.astro';
import type { CollectionEntry } from 'astro:content';

export interface Props {
  faqs: CollectionEntry<'faqs'>[];
  title?: string;
  class?: string;
}

const { faqs, title = 'Frequently Asked Questions', class: className = '' } = Astro.props;
---

{faqs.length > 0 && (
  <Section variant="muted" class={className}>
    <h2 class="mb-8 text-center text-3xl font-bold sm:mb-10 lg:text-4xl">{title}</h2>
    <div class="mx-auto max-w-3xl space-y-4">
        {faqs.map((faq) => (
          <AccordionItem
            question={faq.data.question}
            answer={faq.data.answer}
          />
        ))}
    </div>
  </Section>
)}
