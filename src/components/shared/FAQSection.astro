---
/**
 * FAQ Section - Premium Two-Column Layout
 * Engaging header with trust elements + FAQ accordion
 */
import AccordionItem from './AccordionItem.astro';
import Section from '../primitives/Section.astro';
import SectionHeader from '../primitives/SectionHeader.astro';
import type { CollectionEntry } from 'astro:content';
import { getBusinessProfile } from '../../lib/getBusinessProfile';

export interface Props {
  faqs: CollectionEntry<'faqs'>[];
  title?: string;
  class?: string;
}

const { faqs, title = 'Your Questions, Answered', class: className = '' } = Astro.props;
const profile = await getBusinessProfile();
---

{faqs.length > 0 && (
  <Section variant="default" class={className}>
    <!-- Two-Column Layout -->
    <div class="grid gap-10 lg:grid-cols-5 lg:gap-16">

      <!-- Left Column: Header + CTA Card -->
      <div class="lg:col-span-2">
        <div class="lg:sticky lg:top-8">
          <!-- Section Header -->
          <SectionHeader
            eyebrow="Got Questions?"
            headline={title}
            description="We believe in transparency. Here are honest answers to the questions homeowners ask us most often."
            align="left"
            class="mb-8"
          />

          <!-- Still Have Questions Card -->
          <div class="rounded-2xl border-2 border-primary/20 bg-gradient-to-br from-primary/5 to-primary/10 p-6">
            <div class="mb-4 flex h-12 w-12 items-center justify-center rounded-xl bg-primary/10">
              <svg class="h-6 w-6 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
              </svg>
            </div>
            <h3 class="mb-2 text-lg font-bold text-foreground">Still have questions?</h3>
            <p class="mb-4 text-sm text-muted-foreground">
              Talk to a real person who can help. No automated systems, no runaround.
            </p>
            <a
              href={`tel:${profile.contact.phone_e164}`}
              class="inline-flex items-center gap-2 rounded-full bg-primary px-5 py-2.5 text-sm font-semibold text-white transition-all hover:bg-primary/90 hover:shadow-lg"
            >
              <svg class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>{profile.contact.phone_display}</span>
            </a>

            <!-- Trust Badge -->
            <div class="mt-4 flex items-center gap-2 text-xs text-muted-foreground">
              <svg class="h-4 w-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span>Available 24/7 for emergencies</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Right Column: FAQ Accordion -->
      <div class="lg:col-span-3">
        <div class="space-y-3">
          {faqs.map((faq, index) => (
            <AccordionItem
              question={faq.data.question}
              answer={faq.data.answer}
              index={index}
            />
          ))}
        </div>
      </div>
    </div>
  </Section>
)}
