---
/**
 * ServiceSolution - Our approach/solution section
 *
 * Positions B.A.P as the solution after problem agitation.
 * Shows expertise and builds confidence.
 */

import Section from '../primitives/Section.astro';

interface Approach {
  headline: string;
  description: string;
  quote?: string;
  quotePerson?: string;
}

interface Props {
  serviceTitle: string;
  location?: {
    title: string;
  };
  approach: Approach;
}

const { serviceTitle, location, approach } = Astro.props;

// Generate SEO-optimized H2
const h2Text = location
  ? `How B.A.P Handles ${serviceTitle} in ${location.title}, ON`
  : `How B.A.P Handles ${serviceTitle}`;
---

{approach && (
  <Section variant="muted">
    <div class="grid gap-10 lg:grid-cols-2 lg:gap-16 items-center">
      {/* Content */}
      <div>
        {/* Header */}
        <p class="eyebrow mb-3">Our Approach</p>
        <h2 class="section-title mb-6">
          {approach.headline || h2Text}
        </h2>
        <p class="text-base leading-relaxed text-muted-foreground">
          {approach.description}
        </p>

        {/* Trust indicators */}
        <div class="mt-8 flex flex-wrap gap-4">
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>30+ years experience</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>TSSA certified</span>
          </div>
          <div class="flex items-center gap-2 text-sm text-muted-foreground">
            <svg class="h-5 w-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
            <span>Family owned</span>
          </div>
        </div>
      </div>

      {/* Quote Card (if provided) */}
      {approach.quote && (
        <div class="relative">
          <div class="rounded-2xl border border-border bg-gradient-to-br from-primary/5 to-primary/10 p-8">
            {/* Quote mark */}
            <div class="absolute -top-4 left-6">
              <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary text-white">
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
                </svg>
              </div>
            </div>

            {/* Quote text */}
            <blockquote class="mt-4">
              <p class="text-lg font-medium leading-relaxed text-foreground italic">
                "{approach.quote}"
              </p>
            </blockquote>

            {/* Attribution */}
            {approach.quotePerson && (
              <div class="mt-6 flex items-center gap-4">
                <div class="flex h-12 w-12 items-center justify-center rounded-full bg-primary/20 text-primary font-bold">
                  {approach.quotePerson.split(' ').map(n => n[0]).join('')}
                </div>
                <div>
                  <p class="font-semibold text-foreground">{approach.quotePerson}</p>
                  <p class="text-sm text-muted-foreground">B.A.P Heating & Cooling</p>
                </div>
              </div>
            )}
          </div>
        </div>
      )}

      {/* Placeholder if no quote */}
      {!approach.quote && (
        <div class="relative hidden lg:block">
          <div class="aspect-square rounded-2xl bg-gradient-to-br from-primary/10 to-primary/5 p-8 flex items-center justify-center">
            <svg class="h-32 w-32 text-primary/20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
        </div>
      )}
    </div>
  </Section>
)}
