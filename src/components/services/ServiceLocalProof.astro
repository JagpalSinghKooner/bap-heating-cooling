---
/**
 * ServiceLocalProof - City-specific social proof section
 *
 * Featured testimonial with specific location reference.
 * Only renders on service-city pages.
 */

import Section from '../primitives/Section.astro';

interface LocalProof {
  testimonial: string;
  customerName: string;
  customerLocation: string;
  result?: string;
}

interface Props {
  serviceTitle: string;
  location: {
    title: string;
  };
  localProof: LocalProof;
}

const { serviceTitle, location, localProof } = Astro.props;

// Generate SEO-optimized H2
const h2Text = `${serviceTitle} Results in ${location.title}, ON`;
---

{localProof && (
  <Section variant="muted">
    {/* Header */}
    <div class="mb-10 text-center">
      <p class="eyebrow mb-3">Local Results</p>
      <h2 class="section-title mx-auto mb-4 max-w-3xl">
        {h2Text}
      </h2>
      <p class="mx-auto max-w-2xl text-base text-muted-foreground">
        Real results from your neighbors in {location.title}.
      </p>
    </div>

    {/* Featured Testimonial Card */}
    <div class="mx-auto max-w-3xl">
      <div class="relative rounded-2xl border border-border bg-background p-8 shadow-lg md:p-10">
        {/* Quote mark */}
        <div class="absolute -top-4 left-8">
          <div class="flex h-10 w-10 items-center justify-center rounded-full bg-primary text-white shadow-lg">
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
          </div>
        </div>

        {/* Testimonial */}
        <blockquote class="mt-4">
          <p class="text-lg leading-relaxed text-foreground md:text-xl">
            "{localProof.testimonial}"
          </p>
        </blockquote>

        {/* Attribution */}
        <div class="mt-8 flex flex-col gap-4 sm:flex-row sm:items-center sm:justify-between">
          <div class="flex items-center gap-4">
            {/* Avatar placeholder */}
            <div class="flex h-14 w-14 items-center justify-center rounded-full bg-primary/10 text-primary">
              <svg class="h-7 w-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <div>
              <p class="font-semibold text-foreground">{localProof.customerName}</p>
              <p class="text-sm text-muted-foreground">{localProof.customerLocation}</p>
            </div>
          </div>

          {/* Result badge */}
          {localProof.result && (
            <div class="inline-flex items-center gap-2 rounded-full bg-green-100 px-4 py-2 text-sm font-semibold text-green-800 dark:bg-green-900/30 dark:text-green-400">
              <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M12 7a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0V8.414l-4.293 4.293a1 1 0 01-1.414 0L8 10.414l-4.293 4.293a1 1 0 01-1.414-1.414l5-5a1 1 0 011.414 0L11 10.586 14.586 7H12z" clip-rule="evenodd" />
              </svg>
              {localProof.result}
            </div>
          )}
        </div>

        {/* Location badge */}
        <div class="mt-6 flex items-center gap-2 border-t border-border pt-6">
          <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <span class="text-sm text-muted-foreground">
            Verified {serviceTitle.toLowerCase()} in {location.title}, Ontario
          </span>
        </div>
      </div>
    </div>
  </Section>
)}
