---
/**
 * ServiceTrustBand - Compact trust signal strip
 *
 * Displays 3 key conversion-focused trust signals:
 * 1. Social proof (rating + review count)
 * 2. Longevity (years in business)
 * 3. Risk reversal (warranty)
 */

import Section from '../primitives/Section.astro';
import { getBusinessProfile } from '../../lib/getBusinessProfile';

const profile = await getBusinessProfile();
const yearsInBusiness = new Date().getFullYear() - profile.business.established_year;
---

<Section variant="compact">
  <div class="flex flex-wrap items-center justify-center gap-6 text-center sm:gap-8 md:gap-12">
    {/* Social Proof - Rating & Reviews */}
    <div class="flex items-center gap-2">
      <div class="flex text-yellow-400">
        {[1, 2, 3, 4, 5].map((star) => (
          <svg
            class={`h-5 w-5 ${star <= Math.floor(profile.reputation.google_rating) ? 'fill-current' : 'fill-current opacity-30'}`}
            viewBox="0 0 20 20"
          >
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
      <span class="font-bold text-foreground">{profile.reputation.google_rating}</span>
      <span class="text-sm text-muted-foreground">({profile.reputation.google_review_count}+ reviews)</span>
    </div>

    {/* Divider */}
    <div class="hidden h-8 w-px bg-border sm:block" aria-hidden="true"></div>

    {/* Longevity - Years in Business */}
    <div class="flex items-center gap-2">
      <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
      </svg>
      <span class="font-bold text-foreground">{yearsInBusiness}+</span>
      <span class="text-sm text-muted-foreground">Years in Business</span>
    </div>

    {/* Divider */}
    <div class="hidden h-8 w-px bg-border sm:block" aria-hidden="true"></div>

    {/* Risk Reversal - Warranty */}
    <div class="flex items-center gap-2">
      <svg class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
      </svg>
      <span class="font-bold text-foreground">{profile.warranty.parts_and_labour_years}-Year</span>
      <span class="text-sm text-muted-foreground">Warranty Included</span>
    </div>
  </div>
</Section>
