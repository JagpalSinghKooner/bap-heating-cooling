---
/**
 * ServicePill Component
 * Consistent, accessible service link pill used across the site
 *
 * USAGE:
 * - Service pathway cards
 * - Service navigation
 * - Related services sections
 *
 * ACCESSIBILITY:
 * - Keyboard navigable
 * - Visible focus states
 * - Semantic anchor element
 */

interface Props {
  label: string;
  href: string;
  variant?: 'default' | 'subtle';
}

const { label, href, variant = 'default' } = Astro.props;

const variantStyles = {
  default: 'bg-primary/5 text-primary hover:bg-primary/10 hover:text-primary border-primary/20',
  subtle: 'bg-muted/50 text-foreground hover:bg-muted hover:text-primary border-border',
};
---

<a
  href={href}
  class:list={[
    'inline-flex items-center px-4 py-2 rounded-full text-sm font-medium transition-all duration-200',
    'border focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2',
    'hover:shadow-sm active:scale-95',
    variantStyles[variant],
  ]}
>
  {label}
</a>

<style>
  /* Ensure consistent touch targets on mobile */
  a {
    min-height: 44px;
    display: inline-flex;
    align-items: center;
  }

  /* Smooth transitions */
  a {
    transition-property: background-color, border-color, color, box-shadow, transform;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>
