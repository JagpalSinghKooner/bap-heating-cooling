---
/**
 * CardBody Component
 *
 * TEXT AREA RULES:
 * - Padding applies ONLY to the text/content section
 * - Padding uses the global spacing scale
 * - Text block is visually separated from image via spacing
 */

interface Props {
  padding?: 'sm' | 'md' | 'lg';
  class?: string;
}

const {
  padding = 'md',
  class: className = '',
} = Astro.props;

// Use global spacing scale from tokens.css
const paddingClasses = {
  sm: 'p-4',   // --card-padding-sm (1rem/16px)
  md: 'p-6',   // --card-padding-md (1.5rem/24px)
  lg: 'p-8',   // --card-padding-lg (2rem/32px)
}[padding];

const classes = `${paddingClasses} ${className}`;
---

<div class={classes}>
  <slot />
</div>
