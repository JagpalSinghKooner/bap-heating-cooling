---
interface Props {
  maxWidth?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  class?: string;
}

const {
  maxWidth = 'lg',
  class: className = '',
} = Astro.props;

const maxWidthClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-6xl',
  xl: 'max-w-7xl',
  full: 'max-w-full',
};

const baseClasses = 'container mx-auto px-4 sm:px-6 lg:px-8';

const classes = `${baseClasses} ${maxWidthClasses[maxWidth]} ${className}`;
---

<div class={classes}>
  <slot />
</div>
