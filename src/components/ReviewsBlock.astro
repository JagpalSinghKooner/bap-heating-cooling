---
/**
 * ReviewsBlock Component - 3-Card Static Grid
 * Clean testimonial cards with service labels and yellow quote marks
 */
import type { Review } from '../lib/reviewResolver';
import Section from './primitives/Section.astro';

interface Props {
  reviews: Review[];
  title?: string;
  class?: string;
}

const { reviews, title = 'What Our Customers Say About Us', class: className = '' } = Astro.props;

// Helper: Get initials from name
function getInitials(name: string): string {
  return name
    .split(' ')
    .map(n => n[0])
    .join('')
    .toUpperCase()
    .slice(0, 2);
}

// Helper: Generate avatar gradient from name
function getAvatarGradient(name: string): string {
  const gradients = [
    'from-blue-500 to-cyan-500',
    'from-green-500 to-emerald-500',
    'from-purple-500 to-pink-500',
    'from-orange-500 to-red-500',
    'from-indigo-500 to-purple-500',
    'from-teal-500 to-green-500',
  ];
  const index = name.charCodeAt(0) % gradients.length;
  return gradients[index];
}

// Service type labels for variety
const serviceTypes = [
  'Furnace Installation',
  'AC Repair',
  'Heat Pump Service',
  'Emergency Repair',
  'HVAC Maintenance',
  'Air Quality Service',
];

// Calculate total reviews (use actual count or default)
const totalReviews = reviews.length > 0 ? reviews.length : 243;

// Get first 3 reviews for display
const displayReviews = reviews.slice(0, 3);
---

<Section variant="default" class={className}>
  <!-- Header with Stars and Review Count -->
  <div class="mb-10 text-center sm:mb-12">
    <!-- Star Rating Row -->
    <div class="mb-4 flex items-center justify-center gap-2">
      <div class="flex items-center gap-0.5">
        {Array.from({ length: 5 }).map(() => (
          <svg class="h-6 w-6 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
      <span class="text-sm font-medium text-muted-foreground">
        5.0 ({totalReviews} reviews)
      </span>
    </div>

    <!-- Title -->
    <h2 class="section-title mx-auto max-w-3xl">
      {title}
    </h2>
  </div>

  {reviews.length === 0 ? (
    <p class="text-center text-muted-foreground">No reviews available.</p>
  ) : (
    <!-- 3-Card Grid -->
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {displayReviews.map((review, index) => (
        <div class="group relative flex h-full flex-col rounded-2xl bg-muted/50 p-6 transition-all duration-300 hover:shadow-lg">
          <!-- Service Type Label -->
          <p class="mb-4 text-sm font-medium text-muted-foreground">
            {serviceTypes[index % serviceTypes.length]}
          </p>

          <!-- Review Text -->
          <blockquote class="mb-6 flex-1 text-base leading-relaxed text-foreground">
            {review.data.text}
          </blockquote>

          <!-- Yellow Quote Mark -->
          <div class="absolute bottom-20 right-6">
            <svg class="h-10 w-10 text-yellow-400" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
          </div>

          <!-- Author Section -->
          <div class="mt-auto flex items-center gap-3 border-t border-border/50 pt-4">
            <!-- Avatar -->
            <div class={`flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-gradient-to-br ${getAvatarGradient(review.data.authorName)} text-sm font-bold text-white`}>
              {getInitials(review.data.authorName)}
            </div>

            <!-- Name and Location -->
            <div>
              <p class="font-bold text-foreground">
                {review.data.authorName}
              </p>
              <p class="text-sm text-muted-foreground">
                {review.data.reviewDate || 'Verified Customer'}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  )}

  <!-- Link to all reviews -->
  <div class="mt-10 text-center">
    <a
      href="/reviews/"
      class="inline-flex items-center gap-2 rounded-full border border-border bg-background px-6 py-3 font-medium text-foreground shadow-sm transition-all hover:border-primary hover:shadow-md"
    >
      <span>Read all reviews</span>
      <svg class="h-4 w-4 text-muted-foreground" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
      </svg>
    </a>
  </div>
</Section>
