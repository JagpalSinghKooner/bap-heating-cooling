---
/**
 * ReviewsBlock Component - Clean, Readable Testimonials
 * Focuses on readability with large text and generous whitespace
 */
import type { Review } from '../lib/reviewResolver';
import Section from './primitives/Section.astro';
import { getBusinessProfile } from '../lib/getBusinessProfile';

interface Props {
  reviews: Review[];
  title?: string;
  class?: string;
}

const { reviews, title = 'What Our Customers Say', class: className = '' } = Astro.props;

const profile = await getBusinessProfile();

// Get Google rating from profile
const googleRating = profile.reputation.google_rating;
const googleReviewCount = profile.reputation.google_review_count;

// Show 4 featured reviews in 2x2 grid
const displayReviews = reviews.slice(0, 4);
---

<Section variant="muted" class={className}>
  <!-- Header -->
  <div class="mb-12 text-center">
    <p class="eyebrow mb-3">Customer Reviews</p>
    <h2 class="section-title mx-auto mb-4 max-w-3xl">
      {title}
    </h2>
    <p class="mx-auto mb-8 max-w-2xl text-base text-muted-foreground">
      Real feedback from homeowners across Guelph and Ontario. See why families trust us with their comfort.
    </p>

    <!-- Google Rating - Clean Badge -->
    <a
      href="https://www.google.com/search?q=B.A.P+Heating+%26+Cooling+reviews"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-4 rounded-2xl bg-white px-6 py-4 shadow-md ring-1 ring-gray-100 transition-all hover:shadow-lg"
    >
      <div class="flex items-center gap-1">
        {Array.from({ length: 5 }).map((_, i) => (
          <svg class={`h-6 w-6 ${i < Math.floor(googleRating) ? 'text-yellow-400' : 'text-gray-200'}`} fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
        ))}
      </div>
      <div class="text-left">
        <p class="text-2xl font-bold text-gray-900">{googleRating} out of 5</p>
        <p class="text-sm text-gray-500">{googleReviewCount}+ Google Reviews</p>
      </div>
    </a>
  </div>

  {reviews.length === 0 ? (
    <p class="text-center text-gray-500">No reviews available.</p>
  ) : (
    <!-- 2x2 Grid - Balanced Layout -->
    <div class="grid gap-8 md:grid-cols-2">
      {displayReviews.map((review) => (
        <div class="relative rounded-2xl bg-gray-50 p-8">
          <!-- Large Quote Icon -->
          <svg class="mb-6 h-10 w-10 text-blue-500" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
          </svg>

          <!-- Review Text - Large & Readable -->
          <blockquote class="mb-8 text-lg leading-relaxed text-gray-700">
            {review.data.text}
          </blockquote>

          <!-- Author - Simple -->
          <div class="flex items-center gap-4">
            <!-- Stars -->
            <div class="flex gap-0.5">
              {Array.from({ length: 5 }).map((_, i) => (
                <svg class={`h-5 w-5 ${i < review.data.rating ? 'text-yellow-400' : 'text-gray-300'}`} fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="font-semibold text-gray-900">{review.data.authorName}</span>
          </div>
        </div>
      ))}
    </div>
  )}

  <!-- CTA -->
  <div class="mt-12 text-center">
    <a
      href="https://www.google.com/search?q=B.A.P+Heating+%26+Cooling+reviews"
      target="_blank"
      rel="noopener noreferrer"
      class="inline-flex items-center gap-2 text-blue-600 font-medium hover:text-blue-700 transition-colors"
    >
      <span>Read all reviews on Google</span>
      <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
      </svg>
    </a>
  </div>
</Section>
